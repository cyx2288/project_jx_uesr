<!--找回支付密码-->


<view class="no_invitation" wx:if="{{code=='0000'}}">


    <view class="account_information_mime">
        <!--姓名-->
        <view  class="mine_welfare">

            <text class="password_image">姓名</text>

            <text class="account_information_tel">{{userName}}</text>

        </view>

        <hr/>
        <!--身份证号-->
        <view  class="mine_welfare">

            <text class="password_image">身份证号</text>

            <text class="account_information_tel">{{idNumber}}</text>

        </view>

    </view>

</view>


<!--未认证-未收到企业邀请-->

<view class="no_invitation" wx:else>

    <view class="account_information_mime">

        <!--姓名-->
        <view  class="mine_name">

            <text class="password_image">姓名</text>

            <text wx:if="{{hasUserName}}" class="account_information_tel">{{userName}}</text>

            <text class="account_information_tel">橙子橙</text>

        </view>

        <hr/>


        <!--身份证号-->
        <view  class="mine_welfare">
            <text class="password_image">身份证号</text>
            <label>
                <input style="text-align: right" class="account_information_tel" value="{{idNumber}}" pattern="[0-9]*" placeholder="请输入身份证号" placeholder-style="color:#bbb" maxlength="18" style="text-align: left"/>
            </label>

       </view>
     </view>


    <!--button-->
    <navigator url="../input_password/input_password" class="page__bd page__bd_spacing" style="margin-top: 25px">

        <button class="weui-btn" type="primary" style="background: -webkit-linear-gradient(left bottom,#E87B17,#eb5e26); font-size: 14px;">确认</button>

    </navigator>

</view>


