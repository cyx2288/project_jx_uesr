<!--提现-->

<view class="cash_card">

    <!--银行卡-->
    <view class="weui-panel">


        <picker bindchange="bindPickerChange" value="" range="{{chooseBank}}" class="weui-media-box weui-media-box_text">

            <view class="bank_list" data-id="{{bankCardId}}">

                <view class="weui_title">

                    <view class="weui_left">

                        <view class="weui-media-box__title weui-media-box__title_in-text">{{bankName}}（储蓄卡）</view>

                    </view>

                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>

                </view>

                <text class="details_date">{{bankNo}}</text>

            </view>
        </picker>

        <hr/>

        <!--更多-->

        <navigator type="default" class="weui-cell weui-cell_access weui-cell_link" url="../add_card/add_card">
            <view class="weui-cell__bd">添加新卡</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>

    </view>

    <!--输入金额-->
    <view url="../payroll/payroll" class="weui-panel">

        <view class="weui-panel__bd">

            <view class="weui-media-box ">

                <view class="weui-media-box__desc">单笔￥100.00 - ￥5000.00（手续费0.1%）</view>

                <view class="weui-media-box__info">￥

                    <view class="section__title" style="display: none">{{inputValue}}</view>

                    <label>
                        <input class="account_information_tel" bindinput="bindKeyInput" value="{{balance}}" type="digit" placeholder="请输入金额" placeholder-style="color:#bbb, font-size:14px"/>
                    </label>

                </view>

                <view class="weui_title">

                    <view class="weui-media-box__title weui-media-box__title_in-text">可提额度{{limit}}元</view>

                    <image src="../../../static/icon/wages/jx_ask.png" class="ask" bindtap="hasTipsFn"/>

                    <view bindtap="cashAllFn" class="weui_confirm orange">全部提现</view>

                </view>

            </view>
        </view>
    </view>

    <!--button-->
    <view class="page__bd page__bd_spacing">

        <button class="weui-btn" type="primary" bindtap="cashFn" style="background: -webkit-linear-gradient(left bottom,#E87B17,#eb5e26); font-size: 14px;">确认提现</button>
        <!--提示-->
        <text class="payroll_prompt " style="color: #E87B17; font-size:14px;text-align: center" bindtap="moreFn">联系客服</text>

    </view>


    <!--温馨提示-->
    <view class="weui-prompt weui-panel_access">

        <view class="weui-media-box weui-media-box_text">

            <view class="weui-media-box__title weui-media-box__title_in-text">温馨提示</view>

            <view class="cash_prompt">
                <icon type="circle" size="16" style="margin-right: 5px;"></icon>
                <view class="weui-media-box__desc">订单提交后工作日一般2小时内处理，如出款失败，则5个工作日内退款至原支付账户，具体以银行时间为准，正常退款时间内，建议咨询相关银行
                </view>
            </view>

            <view class="cash_prompt">
                <icon type="circle" size="16" style="margin-right: 5px;"></icon>
                <view class="weui-media-box__desc">限额说明：单卡单笔5000.00元，当日100000.00元，当月300000.00元</view>
            </view>

        </view>

    </view>


</view>

