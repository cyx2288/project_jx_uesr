page{
    background-color: #ebebeb;
    width: 100%;
    height: 100%;
}

.bill_detail .details{
    box-sizing: border-box;
    background:linear-gradient(to bottom, #ea5e26 , #fdae3b);
}
.bill_detail .details .cash{
    padding: 30px 15px;
    background-size: cover;
    text-align: center;
    color: white;

}

.bill_detail .details .cash view{
    font-size: 32px;
}
.bill_detail .details .cash>view:first-child {
    display: flex;
    align-items: center;
    justify-content: center;
}
.bill_detail .details .cash>view:first-child view{
    font-size: 14px;
}

.bill_detail .cash {
    padding: 20px 15px 15px;
    text-align: center;
}

.bill_detail .details_list {
    background-color: #fff;
    overflow: hidden;
    margin: 15px;
    border-radius: 8px;
}
.bill_detail .details_list .cell {
    position: relative;
    padding: 10px 15px;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
}
.details_list .cell view:first-child{
    color: #8a8a8a;
    white-space: nowrap;
    margin-right: 14px;
}
.details_list .cell view:last-child{
    text-align: right;
}
.details_list .cell view.jump_to{
    color: #4a4a4a;
}
.details_list .cell:last-of-type:after{
     content: '';
     position: absolute;
     bottom:0;
     left: 15px;
     width: 98%;
     border-bottom: none;
     height: 1px;
     transform:scaleY(.6);
 }

.details_list .cell:after{
     content: '';
     position: absolute;
     bottom:0;
     left: 15px;
     width: 98%;
     border-bottom: 1px solid #e9e9e9;
     height: 1px;
     transform:scaleY(.6);

 }
.details_list .cell.bill_detail_right:before{
     content: '';
     display: block;
     width: 5px;
     height: 5px;
     border-right: 2px solid #ddd;
     border-bottom: 2px solid #ddd;
     position: absolute;
     right: 15px;
     top: 50%;
     transform: translateY(-50%) rotate(-45deg);
 }
button.kf_button{
    position:relative;
    display:block;
    margin-left:0;
    margin-right:0;
    padding-left:0;
    padding-right:0;
    padding:15px 0;
    box-sizing:border-box;
    font-size:14px;
    text-align:center;
    text-decoration:none;
    line-height:normal;
    border-radius:0;
    -webkit-tap-highlight-color:transparent;
    overflow:hidden;
    color:#eb5e26;
    background-color:transparent;

}

.kf_button::after{
    border: 0px;
}