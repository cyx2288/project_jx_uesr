@import "../../../pages/user/id_card/id_card.wxss";

.pages{
    background-color: #f7f7f7;
    width: 100%;
}


.mainland_certification{
    background-color:#fff;
    border-radius:5px;
    width: 94%;
    margin: 15px auto;

}

.password_prompt{
    display: block;
    color: #ee6934;
    font-size: 14px;
    padding: 15px 10px 0 10px;
}

.jx_password_image{

    display: flex;
    justify-content: center;
    padding-top: 15px;
}

.password_face{
    width: 180px;
    height: 123px;
}

.password_title{
    display: flex;
    justify-content: center;
    padding-bottom: 15px;
    padding-top: 5px;
}
.password_text{
    color: #8a8a8a;
    padding-right: 10px;
}

.password_example{
    color: #fe9728;
}

/*提示*/

.mianland_prompt{
    position:absolute;
    bottom: 25rpx;
    padding-left: 15px;
    color: #ababab;
    font-size: 14px;
}

/*弹框*/
.modal-mask{

    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);


}

.modal-content{

    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 300px;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}

.modal-header{

    padding: 1.3em 1.6em 0.5em;

}

.modal-body{
    padding: 0 1.6em 0.8em;
    min-height: 40px;
    font-size: 15px;
    line-height: 1.3;
    word-wrap: break-word;
    word-break: break-all;
    color: #808080;

}
.modal-body view:last-child{

    width: 253px;
    height: 202px;

}

.modal-body image{
    width: 100%;
    height: 150px;
}

.modal-footer{

    position: relative;
    line-height: 48px;
    font-size: 18px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.modal-footer:after{

    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #D5D5D6;
    color: #D5D5D6;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}
.modal-btn{

    display: block;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    color: #fe9728;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    position: relative;
}
.error_message{
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600rpx;
    background-color: white;
    border-radius: 2px;
    z-index: 100;
}
.error_bg{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: black;
    opacity: 0.7;
    z-index: 99;
}
.error_message .title{
    text-align: center;
    font-size: 18px;
    padding: 5px;
    color: #4a4a4a;
}
.error_message .content{
    font-size: 16px;
    padding: 5px 10px 10px;
    color: #4a4a4a;
    border-bottom: 1px solid #dddddd;
}
.error_message .button{
    display: flex;
}
.error_message .button view{
    flex: 1;
}
.error_message .button .cancel{
    text-align: center;
    font-size: 18px;
    line-height: 46px;
}
.error_message .button .confirm{
    border-left: 1px solid #dddddd;
}