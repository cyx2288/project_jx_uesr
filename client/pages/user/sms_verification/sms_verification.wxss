/*弹框*/


.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 40%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 10rpx;
}

.modal-title {
    padding-top: 50rpx;
    font-size: 16px;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding:20rpx 30rpx;
    color: #ababab;
    font-size: 14px;
    text-align: center;

}

.modal-input {
    display: flex;
    background: #fff;
    border: 2rpx solid #ddd;
    border-radius: 4rpx;
    font-size: 28rpx;
}

.content_text{

    color: #4a4a4a;

}

.jx_code{
    width: 70%;
}
.input {
    width: 100%;
    height: 82rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #333;
}
.modal-footer {
    display: flex;
    flex-direction: row;
    height: 96rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 96rpx;
}

.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
    font-size: 16px;
}

.btn-confirm {
    width: 100%;
    color: #ec5300;
    text-align: center;
    font-size: 16px;
    line-height: 96rpx;
}
