@import "../../wages/index/index.wxss";
@import "../mine/mine.wxss";

page {
    background-color: #ebebeb;
    width: 100%;
    height: 100%;
    color: #4a4a4a;
}

.weui-panel {

    display: flex;
    justify-content: space-between;
    width: 100%;
    padding: 30px 15px;
    box-sizing: border-box;
    margin: 0 auto;
    border-left:none;
    border-radius: 0;
    background:linear-gradient(to bottom, #ea5e26 , #fdae3b);
}

.weui-loadmore__tips {
    text-align: center;
    color: #E87B17;
}

.title {
    width: 30%;
}

.step {

    position: relative;

    width: 70px;
}

.step > .weui-loadmore {

    background-color: #fff;
    color: #E87B17;
    width: 22px;
    height: 22px;
    border-radius: 50%;
    margin: 5px auto;
    opacity: 1;
}

.step > .status {
    color: #fff;
}

.step > .border {
    position:absolute;
    width:100%;
    top:30%;
    left:100%;
    border-bottom:1px solid #fff;



}

.orange_btn{

    background: -webkit-linear-gradient(65deg,#ea5e26,#fe9728);
    font-size: 16px;
}

.step.selected ~ .step> .weui-loadmore {

    width: 22px;
    height: 22px;
    border-radius: 50%;
    margin: 5px auto;
    color: #fff;
    opacity: .6;

}

.step.selected ~ .step > .status {
    font-size: 14px;
    color: #fff;
    opacity: .6;
}

.step.selected ~ .step > .border {
    position: absolute;
    width:100%;
    top:30%;
    left:100%;
    border-bottom:1px solid #fff;

}


.cash_step >.weui_title{
    background-color: #fff;
    display:flex;
    padding:15px 15px;
    justify-content:space-between;
    align-content: center;



}

.wages_box{

    background-color:#fff;
    border-radius:5px;
    width:94%;
    margin:30px auto;
    overflow: hidden;
}


.wages_middle {
    margin-bottom: 15px;
}

.weui-media-box {
    padding: 10px 15px;
}

.prompt {
    color: #E87B17;
    margin: 0 auto;
    text-align: center;
}

.weui-confirm {
    font-size: 14px;

}

.payroll_prompt {
    color: #E87B17;
    font-size: 14px;
}

.wages_middle {
    margin: 15px auto;
    text-align: center;
}
.wages_middle:first-of-type {
    margin-top: 0;

}
.weui-btn-area.hide{

    display: none;
}

.weui-btn-area.hide{

    display: none;
}
.weui-btn-area.show_btn{

    display: block;
}

.wages_middle .jx_asset{

    background:linear-gradient(to bottom, #ea5e26 , #fdae3b);
    padding: 0;
    width: 100%;
}

.wages_middle .asset_money{

    color: white;
    font-size: 14px;
    justify-content:center;

}

.wages_middle .asset_money >.image{


    width: 18px;
    height: 18px;
    margin-right: 5px;
    border-radius: 50%;
    background-color: white;

}

.wages_middle .asset_money >.image image{
    width: 100%;
    height: 100%;
}

.wages_middle .money_number{

    color: white;
    justify-content:center;
}

.wages_middle .weui_confirm{

    color: #4a4a4a;
    width: calc(100% - 70px);
    text-align: right;
}

.wages_middle .weui-media-box__title{

    color: #ababab;
    text-align: left;
    width: 70px;
}

.jx_right{
    color: #fe9728;
    text-align: center;
}
button.kf_button {

    position:relative;
    display:block;
    margin-left:0;
    margin-right:0;
    padding-left:0;
    padding-right:0;
    padding:15px 0;
    box-sizing:border-box;
    font-size:14px;
    text-align:center;
    text-decoration:none;
    line-height:normal;
    border-radius:0;
    -webkit-tap-highlight-color:transparent;
    overflow:hidden;
    color:#eb5e26;
    background-color:transparent;

}
.kf_button::after{
    border: 0px;
}
