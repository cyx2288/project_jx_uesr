/*弹框*/
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 40%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 10rpx;
}

.modal-title {
    padding-top: 50rpx;
    font-size: 16px;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding:20rpx 30rpx;
    color: #ababab;
    font-size: 14px;
    text-align: center;

}

.modal-input {
    display: flex;
    background: #fff;
    border: 2rpx solid #ddd;
    border-radius: 4rpx;
    font-size: 28rpx;
}

.jx_code{
    width: 70%;
}

.input {
    width: 100%;
    height: 82rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #333;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 96rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 96rpx;
}

.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
    font-size: 16px;
}

.btn-confirm {
    width: 100%;
    color: #ec5300;
    text-align: center;
    font-size: 16px;
    line-height: 96rpx;
}
.popup_bg{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #000;
    opacity: 0.3;
    z-index: 999;
}
.message_box {
    width: 80vw;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: #ffffff;
    border-radius: 3px;
    z-index: 1000;
}
.message_box .title{
    padding: 8px;
    text-align: center;
    font-size: 18px;
    font-weight: 900;
}
.message_box .content {
    padding: 0 20px 20px;
    font-size: 14px;
}
.message_box .content .orange{
    color: #ff7a3c;
    display: inline-block;
}
.message_box .content view{
    margin: 10px 0;
}
.message_box .button {
    display: flex;
    align-items: center;
    height: 50px;
}
.message_box .button view{
    flex: 1;
    white-space: nowrap;
    text-align: center;
    border-top: 1px solid #dddddd;
    font-size: 14px;
    line-height: 50px;
}
.cancel{
    color: #ababab;
}
.message_box .button view+view{
    border-left: 1px solid #dddddd;
}
.no_login{
    height: 50vh;
    padding-top: 30px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}
.no_login view{
    font-size: 14px;
    color: #ababab;
}
.no_login .btn{
    font-size: 14px;
    border: 1px solid #EB5E26;
    color: #EB5E26;
    border-radius: 5px;
    padding: 0 15px;
}
