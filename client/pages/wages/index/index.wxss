/*下拉选择*/

.selected_box{

    border: 1px solid #fe9728;
    border-radius: 5px;
    padding: 10rpx 20rpx;
}

.phone_personal{
    width: 100%;
    color: #8a8a8a;
    line-height:100rpx;
    padding: 0 20px;
}
.phone_personal >span{

    color: #fe9728;

}
.phone_one{
    display: flex;
    position: relative;
    justify-content: space-between;
    width:100%;


}
.person_box{
    position: relative;
}
.phone_select{
    margin-top:0;
    z-index:100;
    position:absolute;
    box-shadow:2px 2px 2px #ddd;
    top:-10rpx;
    left:30rpx;
    border-radius:5px;
    overflow:hidden;


}


.select_one:active{
    color: #E87B17;
}
.select_one image{
    width: 18px;
    height: 18px;
    vertical-align: middle;
    margin-right: 5px;
}

.select_one{
    text-align: left;
    background-color: #fff;
    max-width:500rpx;
    padding: 10rpx 20rpx;
    line-height:80rpx;
    color: #4a4a4a;
    border-bottom:1rpx solid #f5f5f5;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;

}
.select_one.is_checked{

    background-color: rgb(254,246,243);
    color: #E87B17;
    border-left: 4px solid #E87B17;


}


.select_one:last-child{
    border-bottom: none;
}



.personal_image,.jx_open{
    z-index: 100;
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    transition: All 0.4s ease;
    -webkit-transition: All 0.4s ease;
}


.jx_open{
    margin:20rpx auto;
    text-align: center;
    display: block;
}

.rotateRight{
    transform: rotate(180deg);
}

/*工资列表*/
.jx_money{
    width:20px;
    margin-right:5px;
